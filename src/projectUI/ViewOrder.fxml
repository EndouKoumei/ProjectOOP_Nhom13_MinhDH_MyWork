<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1">
    <top>
        <TabPane>
            <!-- Tab: Chờ xác nhận -->
            <Tab text="Chờ xác nhận">
                <content>
                    <VBox spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10" />
                        </padding>
                        <TableView fx:id="pendingOrdersTable">
                            <columns>
                                <TableColumn text="Mã đơn" fx:id="orderIDColumn">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="orderID"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn text="Hành động">
                                    <cellFactory>
                                        <TableCell>
                                            <Button text="Hiển thị thông tin" onAction="#displayOrderInfo"/>
                                        </TableCell>
                                    </cellFactory>
                                </TableColumn>
                                <TableColumn text="Hành động">
                                    <cellFactory>
                                        <TableCell>
                                            <Button text="Xem sản phẩm" onAction="#viewOrderProducts"/>
                                        </TableCell>
                                    </cellFactory>
                                </TableColumn>
                            </columns>
                        </TableView>
                    </VBox>
                </content>
            </Tab>

            <!-- Tab: Đang giao -->
            <Tab text="Đang giao">
                <content>
                    <VBox spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10" />
                        </padding>
                        <TableView fx:id="inProgressOrdersTable">
                            <columns>
                                <TableColumn text="Mã đơn" fx:id="orderIDColumn">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="orderID"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn text="Hành động">
                                    <cellFactory>
                                        <TableCell>
                                            <Button text="Hiển thị thông tin" onAction="#displayOrderInfo"/>
                                        </TableCell>
                                    </cellFactory>
                                </TableColumn>
                                <TableColumn text="Hành động">
                                    <cellFactory>
                                        <TableCell>
                                            <Button text="Xem sản phẩm" onAction="#viewOrderProducts"/>
                                        </TableCell>
                                    </cellFactory>
                                </TableColumn>
                            </columns>
                        </TableView>
                    </VBox>
                </content>
            </Tab>

            <!-- Tab: Đã giao -->
            <Tab text="Đã giao">
                <content>
                    <VBox spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10" />
                        </padding>
                        <TableView fx:id="completedOrdersTable">
                            <columns>
                                <TableColumn text="Mã đơn" fx:id="orderIDColumn">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="orderID"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn text="Hành động">
                                    <cellFactory>
                                        <TableCell>
                                            <Button text="Hiển thị thông tin" onAction="#displayOrderInfo"/>
                                        </TableCell>
                                    </cellFactory>
                                </TableColumn>
                                <TableColumn text="Hành động">
                                    <cellFactory>
                                        <TableCell>
                                            <Button text="Xem sản phẩm" onAction="#viewOrderProducts"/>
                                        </TableCell>
                                    </cellFactory>
                                </TableColumn>
                            </columns>
                        </TableView>
                    </VBox>
                </content>
            </Tab>

            <!-- Tab: Hủy -->
            <Tab text="Hủy">
                <content>
                    <VBox spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10" />
                        </padding>
                        <TableView fx:id="cancelledOrdersTable">
                            <columns>
                                <TableColumn text="Mã đơn" fx:id="orderIDColumn">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="orderID"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn text="Hành động">
                                    <cellFactory>
                                        <TableCell>
                                            <Button text="Hiển thị thông tin" onAction="#displayOrderInfo"/>
                                        </TableCell>
                                    </cellFactory>
                                </TableColumn>
                                <TableColumn text="Hành động">
                                    <cellFactory>
                                        <TableCell>
                                            <Button text="Xem sản phẩm" onAction="#viewOrderProducts"/>
                                        </TableCell>
                                    </cellFactory>
                                </TableColumn>
                            </columns>
                        </TableView>
                    </VBox>
                </content>
            </Tab>
        </TabPane>
    </top>
</BorderPane>
